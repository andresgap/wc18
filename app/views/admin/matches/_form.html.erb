<%= form_for [:admin, match], remote: true, html: { style: 'display:inline;' } do |f| %>
  <div class="modal-body">
    <div class="errors"></div>
    <div class="row">
      <div class="form-group col-sm-6">
        <span class="control-label"><%= match.phase.name %></span>
      </div>
      <div class="form-group col-sm-2">
        <%= f.check_box :ready %>
        <%= f.label :ready, class: 'control-label' %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.check_box :closed %>
        <%= f.label :closed, class: 'control-label' %>
        <%= "(#{I18n.l match.date, format: :short})" %>
      </div>
    </div>
    <% if match.phase.level == 1 %>
    <div class="row">
      <div class="form-group col-sm-4">
        <span class="control-label"><%= match.team1.name %></span>
      </div>
      <div class="form-group col-sm-2">
        <%= f.number_field :team1_score, maxlength: 2, min: 0, max: 99, class: 'form-control' %>
      </div>
      <div class="form-group col-sm-4">
        <span class="control-label"><%= match.team2.name %></span>
      </div>
      <div class="form-group col-sm-2">
        <%= f.number_field :team2_score, maxlength: 2, min: 0, max: 99, class: 'form-control' %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="modal-footer">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', '#', class: 'btn btn-default', data: { dismiss: 'modal' } %>
  </div>
<% end %>
