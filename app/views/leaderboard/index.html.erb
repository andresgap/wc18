<div class="container">
  <h1 class="title">Leaderboard</h1>

  <div class="row">
    <div class="col-sm-12">
      <table id="leaderboard-table" class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Position</th>
            <th>Name</th>
            <th>Points</th>
          </tr>
        </thead>
        <% @prediction_sets.each_with_index do |set, index| %>
          <tr>
            <td class="text-center number"><%= index + 1 %></td>
            <td>
              <%= image_tag(set.user.picture, alt: 'picture', class: 'user-image') %>
              <span><%= set.user.name %></span>
            </td>
            <td class="text-center number"><%= set.points %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

</div>
