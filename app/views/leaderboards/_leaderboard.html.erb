<table class="table table-striped table-hover leaderboard-table"
  id="leaderboard-table-<%= title %>">
  <thead>
    <tr>
      <th>Position</th>
      <th>Name</th>
      <th>Points</th>
    </tr>
  </thead>
  <% users.each_with_index do |user, index| %>
    <tr>
      <td class="text-center number"><%= index + 1 %></td>
      <td>
        <%= image_tag(user.picture, alt: 'picture', class: 'user-image') %>
        <%= link_to(user.name, prediction_path(user.prediction_set)) %>
      </td>
      <td class="text-center number"><%= user.prediction_set.points %></td>
    </tr>
  <% end %>
</table>

<script type="text/javascript">
  $(document).ready(function() {
     $('#leaderboard-table-<%= title %>').DataTable({
       retrieve: true,
       iDisplayLength: 50,
       searching: false,
       lengthChange: false,
       columns: [
         { type: "num" },
         { type: "string" },
         { type: "num" }
       ]
    });
  });
</script>
